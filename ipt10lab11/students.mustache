<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Students</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>

    <div class="container mt-5">
        <h1 class="text-center mb-4">Students</h1>

        <div class="row">
            <div class="col">
                <ul class="list-group">
                    {{#students}}
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <strong>{{student_code}}</strong> || {{first_name}} {{last_name}} 
                        </div>
                        <span class="badge bg-primary rounded-pill">{{email}}</span>
                    </li>
                    {{/students}}
                </ul>
            </div>
        </div>

        <!-- Enroll Button -->
        <div class="text-center mt-4">
            <a href="/enrollment-form" class="btn btn-primary">Enroll Student</a>
        </div>

        <hr class="my-4" />

        <div class="text-center">
            <a href="/courses" class="btn btn-link">List of Courses</a>
            <span class="mx-2">|</span>
            <a href="/students" class="btn btn-link">List of Students</a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

</body>
</html>
